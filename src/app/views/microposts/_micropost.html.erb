
<% if root_path? %>

<div class="col-md-3"　id="micropost-<%= micropost.id %>" >
  <div class="card mb-4 box-shadow h-5">
    <div class="embed-responsive embed-responsive-16by9">
      <%= link_to image_tag("http://i.ytimg.com/vi/#{ micropost.video_id }/maxresdefault.jpg", alt: "icon", class: "img-fluid"), micropost_path(micropost) , class: "embed-responsive-item zoomIn"%>
    </div>
    <div class="card-body">
      <div class="mb-2">
        <p class="card-text textOverflow">
          <%= link_to gravatar_for(micropost.user, size: 30), micropost.user ,class:"mr-2"%>
          <%= link_to micropost.user.name, micropost.user ,class:"text-secondary"%>
        </p>
      </div>
      <p class="card-text textOverflow"><%= micropost.content %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete,data: { confirm: "You sure?" },class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
        <small class="text-muted"><%= time_ago_in_words(micropost.created_at) %>前</small>
      </div>
    </div>
  </div>
</div>

<% else%>

<div class="card mb-2 mr-3 box-shadow h-5 p-0">
  <div class="row no-gutters">
    <div class="col-md-6">
      <%= link_to image_tag("http://i.ytimg.com/vi/#{ micropost.video_id }/maxresdefault.jpg", alt: "icon",class:"img-fluid"), micropost_path(micropost) , class: "embed-responsive-item card-img zoomIn"%>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <div class="mb-2">
          <p class="card-text textOverflow">
            <%= link_to gravatar_for(micropost.user, size: 30), micropost.user ,class:"mr-2"%>
            <%= link_to micropost.user.name, micropost.user ,class:"text-secondary"%>
          </p>
        </div>
        <div class="mb-1">
          <p class="card-text textOverflow"><%= micropost.content %></p>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-0">
          <div class="btn-group">
            <% if current_user?(micropost.user) %>
              <%= link_to "delete", micropost, method: :delete,data: { confirm: "You sure?" },class: "btn btn-sm btn-outline-secondary" %>
            <% end %>
          </div>
          <small class="text-muted"><%= time_ago_in_words(micropost.created_at) %>前</small>
        </div>
      </div>
    </div>
  </div>
</div>

<% end%>
